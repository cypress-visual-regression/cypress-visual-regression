{
  "name": "cypress-visual-regression",
  "version": "4.0.0",
  "description": "Module for adding visual regression testing to Cypress",
  "keywords": [
    "visual regression",
    "image diff",
    "cypress"
  ],
  "repository": "https://github.com/cypress-visual-regression/cypress-visual-regression",
  "license": "MIT",
  "author": "Michael Herman <michael@mherman.org>",
  "type": "module",
  "main": "./dist/cypress-visual-regression.umd.cjs",
  "module": "./dist/cypress-visual-regression.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": [
        "./dist/cypress-visual-regression.js"
      ],
      "require": "./dist/cypress-visual-regression.umd.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "prebuild": "rimraf dist && npm run lint && npm run format:check",
    "build": "vite build",
    "build:old": "tsc --project tsconfig.build.json",
    "typecheck": "tsc --noEmit --project tsconfig.json",
    "format:check": "prettier --check src/**/*.ts cypress/**/*.ts",
    "format:fix": "prettier --write src/**/*.ts cypress/**/*.ts",
    "lint": "eslint src --ext .ts --fix",
    "prepublishOnly": "run-s build",
    "preversion": "run-s lint format:check test build",
    "test": "vitest",
    "cy:base-and-regression": "npm run cy:base && npm run cy:regression",
    "cy:open": "cypress open --e2e -b chrome -C cypress.base.config.ts",
    "cy:base": "cypress run -C cypress.base.config.ts",
    "cy:regression": "cypress run -C cypress.regression.config.ts"
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "dependencies": {
    "node-stdlib-browser": "^1.2.0",
    "pixelmatch": "^5.2.1",
    "pngjs": "^6.0.0",
    "sanitize-filename": "^1.6.3",
    "serialize-error": "^11.0.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@faker-js/faker": "8.0.2",
    "@types/node": "20.6.0",
    "@types/pixelmatch": "5.2.4",
    "@types/pngjs": "6.0.1",
    "@typescript-eslint/eslint-plugin": "5.57.1",
    "@typescript-eslint/parser": "5.57.1",
    "eslint": "8.37.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-config-standard-with-typescript": "34.0.1",
    "eslint-import-resolver-typescript": "3.5.5",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-promise": "6.1.1",
    "npm-run-all": "4.1.5",
    "prettier": "2.8.7",
    "rimraf": "3.0.2",
    "typescript": "5.2.2",
    "vite": "4.5.0",
    "vite-plugin-dts": "3.6.3",
    "vite-plugin-node-stdlib-browser": "^0.2.1",
    "vitest": "0.34.4"
  },
  "peerDependencies": {
    "cypress": ">=12"
  },
  "engines": {
    "node": ">=18"
  },
  "ignore": [
    "src",
    "docker",
    "tests"
  ]
}
