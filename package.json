{
  "name": "cypress-visual-regression",
  "version": "5.0.0",
  "description": "Module for adding visual regression testing to Cypress",
  "type": "module",
  "keywords": [
    "visual regression",
    "image diff",
    "cypress"
  ],
  "repository": "https://github.com/cypress-visual-regression/cypress-visual-regression",
  "license": "MIT",
  "author": "Michael Herman <michael@mherman.org>",
  "main": "./dist/plugin.js",
  "types": "./dist/command.d.ts",
  "files": [
    "./dist/**/*"
  ],
  "scripts": {
    "prebuild": "rimraf dist && npm run lint && npm run format:check && npm run test",
    "build": "node esbuild.cjs && tsc --project tsconfig.json --declaration --emitDeclarationOnly",
    "typecheck": "tsc --noEmit --project tsconfig.json",
    "format:check": "prettier --check ./",
    "format:fix": "prettier --write ./",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "prepublishOnly": "run-s build",
    "preversion": "run-s lint format:check test build",
    "test": "vitest run",
    "clean:snapshots": "rimraf cypress/snapshots",
    "cy:base-and-regression": "npm run cy:base && npm run cy:regression",
    "cy:open:base": "visual_regression_log=debug cypress open --e2e -b chrome -C cypress.base.config.ts",
    "cy:open:regression": "visual_regression_log=debug cypress open --e2e -b chrome -C cypress.regression.config.ts",
    "cy:base": "visual_regression_log=debug cypress run -C cypress.base.config.ts",
    "cy:regression": "visual_regression_log=debug cypress run -C cypress.regression.config.ts"
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "pixelmatch": "^5.2.1",
    "pngjs": "^6.0.0",
    "sanitize-filename": "^1.6.3"
  },
  "devDependencies": {
    "@faker-js/faker": "8.0.2",
    "@types/node": "20.6.0",
    "@types/pixelmatch": "5.2.4",
    "@types/pngjs": "6.0.1",
    "@typescript-eslint/eslint-plugin": "5.57.1",
    "@typescript-eslint/parser": "5.57.1",
    "esbuild": "0.19.5",
    "esbuild-node-externals": "^1.9.0",
    "eslint": "8.37.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-config-standard-with-typescript": "34.0.1",
    "eslint-import-resolver-typescript": "3.5.5",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-promise": "6.1.1",
    "npm-run-all": "4.1.5",
    "prettier": "2.8.7",
    "rimraf": "3.0.2",
    "typescript": "5.2.2",
    "vitest": "0.34.4"
  },
  "peerDependencies": {
    "cypress": ">=12"
  },
  "engines": {
    "node": ">=18"
  },
  "ignore": [
    "src",
    "docker",
    "tests"
  ],
  "overrides": {
    "tsconfig-paths": "^4.0.0"
  }
}
